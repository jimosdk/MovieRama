<!-- This is the Homepage-->
<% temp = current_user_preload %>
<% current_user = temp %>

<section class="filter_bar">
        <!--Form for sorting filter-->
        <%= render 'sort_filter_form' %>

        <!-- Button for resetting all filters -->
        <%= button_to  'Reset', movies_url,method: :get %>

        <ul>
            <% if movies_are_filtered_by_poster?%>
            <!-- If the movies are filtered by a poster display a reset button
            for this filter-->
                <%= render 'poster_filter_reset_button' %>
            <% end %>

            <% if movies_are_sorted? %>
            <!-- If the sort filter is active display a reset button 
            for this filter-->
                <%= render 'sort_filter_reset_button' %>
            <% end %>
            
        </ul>
</section>

<section class="articles_section">
       
    <% @movies.each do |movie| %>
        <%= render 'movie_post' ,current_user: current_user ,movie: movie %>
    <% end %>
   
</section>

<% if current_user %>
    <%= render 'new_movie_button' %>
<% end %>

